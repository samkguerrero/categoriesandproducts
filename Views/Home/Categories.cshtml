<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
</head>
<body>
    <div class="center-align container">
        <a href="products">Products</a>   | Categories
        <br>
        <br>
        <br>
        <div class="row">
            <div style="border-right: 2px solid black;" class="col s6">
                <h4 >New Category</h4>
                @model Category
                <form style="padding: 50px;" class="left-align" asp-action="Categories" asp-controller="Home" method="post">
                    <br>
                    <span class="errorMsg" asp-validation-for="Name"></span>
                    <label asp-for="Name"></label>
                    <input asp-for="Name">
                    <br>

                    <br>
                    <input type="submit" value="create">
                </form>
            </div>
            <div class="col s6">
            <h4>Existing Categories</h4>
            @{
                foreach(var category in @ViewBag.AllCategories) 
                {
                    <p><a href="category/@category.CategoryId">@category.Name</a></p>
                }
            }
            </div>
        </div>
    </div>
</body>
</html>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
</head>
<body>
    <div class="center-align container">
        Products   | <a href="categories">Categories</a>
        <br>
        <br>
        <br>
        <div class="row">
            <div style="border-right: 2px solid black;" class="col s6">
                <h4 >New Product</h4>
                @model Product

                <form style="padding: 35px;" class="left-align" asp-action="Products" asp-controller="Home" method="post">
                    <br>
                    <span class="errorMsg" asp-validation-for="Name"></span>
                    <label asp-for="Name"></label>
                    <input asp-for="Name">
                    <br>

                    <br>
                    <span class="errorMsg" asp-validation-for="Description"></span>
                    <label asp-for="Description"></label>
                    <br>
                    <br>
                    <textarea asp-for="Description" cols="30" rows="10"></textarea>
                    <br>

                    <br>
                    <span class="errorMsg" asp-validation-for="Price"></span>
                    <label asp-for="Price"></label>
                    <input asp-for="Price">
                    <br>

                    <br>
                    <input type="submit" value="create">
                </form>
            </div>
            <div class="col s6">
                <h4>Existing Products</h4>
                @{
                    foreach(var product in @ViewBag.AllProducts) 
                    {
                        <p><a href="products/@product.ProductId">@product.Name</a></p>
                    }
                }
            </div>
        </div>
    </div>
</body>
</html>
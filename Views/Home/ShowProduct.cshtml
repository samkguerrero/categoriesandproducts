<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    @model Product
    <div class="container">
        <h1>Product: @Model.Name</h1>
        <h4>Categories:</h4>
        <ol>
            @{
                foreach(var productCategory in @Model.Categories) 
                {
                    <li>@productCategory.Category.Name</li>
                }
            }
        </ol>
        <h4>Add Category:</h4>
        <form asp-action="AddCategoryToProduct" asp-controller="Home" method="post">
            <select name="Name" id="">
                @{
                foreach(var availableCategory in @ViewBag.AvailableCategories) 
                {
                    <option value="@availableCategory.CategoryId">@availableCategory.Name</option>
                }
            }
            </select>
            <br>
            <br>
            <input type="submit" value="Add">
        </form>
    </div>
</body>
</html>